<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.estebanmarroquin.babycare.activities.feeding.size.size_4_month">

    <RelativeLayout tools:context="org.estebanmarroquin.babycare.activities.feeding.size.size_3_month"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout tools:context="org.estebanmarroquin.babycare.activities.feeding.size.size_1_month"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Altura y peso en el cuarto mes"
                android:id="@+id/textView67"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Niño"
                android:id="@+id/textView68"
                android:layout_marginTop="53dp"
                android:layout_below="@+id/textView67"
                android:layout_alignLeft="@+id/textView67"
                android:layout_alignStart="@+id/textView67" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="peso(kg)  Mín 5.700  Max. 7.600"
                android:id="@+id/textView69"
                android:layout_below="@+id/textView68"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="talla(cm) Mín 61.0    Max. 66.4"
                android:id="@+id/textView70"
                android:layout_below="@+id/textView69"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Niña"
                android:id="@+id/textView71"
                android:layout_above="@+id/textView72"
                android:layout_alignLeft="@+id/textView68"
                android:layout_alignStart="@+id/textView68" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="peso(kg) Mín. 5.300  Max. 6.900"
                android:id="@+id/textView72"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/textView69"
                android:layout_alignEnd="@+id/textView69" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="talla(cm) Mín. 59.4   Max. 64.5"
                android:id="@+id/textView73"
                android:layout_below="@+id/textView72"
                android:layout_toRightOf="@+id/textView71"
                android:layout_toEndOf="@+id/textView71" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:id="@+id/imageView10"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/textView72"
                android:layout_alignEnd="@+id/textView72"
                android:src="@drawable/size" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
